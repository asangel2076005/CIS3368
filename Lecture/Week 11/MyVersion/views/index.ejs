<!DOCTYPE html>
<html>
    <head>

    </head>
    
    <body>
        <header>
        </header>

        <main>
            <form action="/process_login" method="post">
                <div class="form-group">
                    <ul>
                        <li>
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="username" class="form-control" required>
                        </li>
                        <li>
                            <label for="password" class="form-label">Password: </label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </li>
                    </ul>
                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
            </form>

            <form action="/process_form" method="post">
                <h2>Search for aliases</h2>
                <div class="form-group">
                    <li>
                        <label for="hero" class="form-group">Hero name</label>
                        <input type="text" id="hero" name="hero" class="form-control" placeholder="Hero Name" required>
                    </li>
                </div>
                <div>
                    <select name="selectedPerson" id="selectedPerson">
                        <% locals.person.forEach(function(user) {%>
                            <option value="<%= user.id %>"><%= user.firstName %> <%= user.lastName %></option>
                        <% });%>
                    </select>
                </div>
                <button type="submit">Submit</button>
            </form>
        </main>
    </body>
</html>