<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>

    <body>

        <header>
            <%- include('../partials/header'); %>
        </header>

        <main>
            <form action="/add_student" method="post">
                <label for="majorCode">Major Code:</label>
                <input type="number" id="majorCode" name="MAJOR_CODE" required><br><br>
                <label for="studentFname">First Name:</label>
                <input type="text" id="studentFname" name="STUDENT_FNAME" required><br><br>
                <label for="studentGpa">GPA:</label>
                <input type="number" id="studentGpa" name="STUDENT_GPA" step="0.01" required><br><br>
                <label for="studentLname">Last Name:</label>
                <input type="text" id="studentLname" name="STUDENT_LNAME" required><br><br>
                <button type="submit">Add Student</button>
            </form>
        </main>
            
        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </body>
</html>